Class {
	#name : #ReHabCell,
	#superclass : #CMSpatialEntityElement,
	#instVars : [
		'access',
		'noHarvestPeriod',
		'biomass'
	],
	#classInstVars : [
		'maxBiomass',
		'minBiomass'
	],
	#category : #'ReHab-Model'
}

